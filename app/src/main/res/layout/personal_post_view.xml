<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<!--    <TextView-->
<!--        android:id="@+id/textView31"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="3dp"-->
<!--        android:background="@color/black" />-->

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/myUsername"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-black"
                android:text="Username"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/myPostDate"
                android:layout_width="156dp"
                android:layout_height="18dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Post Date"
                android:textColor="#8C8C8C"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myUsername" />

            <TextView
                android:id="@+id/myPostDetails"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:paddingBottom="15dp"
                android:text="Post Details"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myPostDate" />

            <ImageView
                android:id="@+id/myPostImage"
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:layout_below="@+id/postDetails"
                android:layout_alignParentStart="true"

                android:layout_marginStart="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myPostDetails"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        <ImageView-->
<!--            android:id="@+id/myBookmarkIcon"-->
<!--            android:layout_width="37dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginLeft="52dp"-->
<!--            android:layout_marginTop="4dp"-->
<!--            app:srcCompat="@drawable/bookmark_border_24" />-->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/myCommentIcon"
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/comment_icon" />

            <TextView
                android:id="@+id/myCommentCount"
                android:layout_width="135dp"
                android:layout_height="31dp"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:text="comments number"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/myCommentIcon"
                app:layout_constraintStart_toEndOf="@+id/myCommentIcon"
                app:layout_constraintTop_toTopOf="@+id/myCommentIcon"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/horizontalDotSetting"
                android:layout_width="52dp"
                android:layout_height="36dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/more_horiz_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

<!--    <TextView-->
<!--        android:id="@+id/textView27"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="20dp"-->
<!--        android:background="@color/grey" />-->


</LinearLayout>